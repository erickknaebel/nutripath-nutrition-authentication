{
  "name": "express-authentication-server",
  "version": "0.0.1",
  "description": "A simple authentication server example using Node and Express",
  "keywords": [
    "authentication",
    "async",
    "promise",
    "api"
  ],
  "author": "ESKMedia",
  "license": "MIT",
  "main": "build/index.ts",
  "scripts": {
    "build": "tsc",
    "config:test": "ts-node set.test.env",
    "dev": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "start": "tsc && node build/index.js",
    "test": "npm run config:test && mocha --exit --recursive --require ts-node/register --timeout=5000 tests/**/*.test.ts",
    "test:coverage": "npm run config:test && nyc --require ts-node/register --reporter lcov --reporter text mocha --exit --recursive --timeout=5000 tests/**/*.ts",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "ci": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.2.5",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "http-status-codes": "^2.1.2",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "mongodb-memory-server": "^6.9.2",
    "mongoose": "^5.10.2",
    "morgan": "^1.10.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.12",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/hapi__joi": "^17.1.4",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.7.36",
    "@types/sinon": "^9.0.9",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "supertest": "^4.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
